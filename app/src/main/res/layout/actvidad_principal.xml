<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
    >
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="@string/boton_saltar_text"
        android:id="@+id/boton_saltar"
        android:layout_gravity="center_horizontal|bottom"
        />

    <ImageView
        android:id="@+id/image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/backgroud_frame_layout"
        android:layout_gravity="top|center"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/image_estatica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ejemplo_estadistica"
        android:layout_gravity="center"
        android:padding="@dimen/button_height" />
</FrameLayout>